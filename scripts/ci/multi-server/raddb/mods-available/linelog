linelog {
        format = "This is a log message for %{User-Name}"
        destination = file

        file {
                filename = ${logdir}/linelog
                permissions = 0600
                escape_filenames = no
        }

        pool {
                start = 1
                min = 0
                spare = 2
                uses = 0
                retry_delay = 30
                lifetime = 0
                idle_timeout = 60
        }

        unix {
                filename = "/var/run/test.sock"
                pool = ${..pool}
        }
}

linelog log_stdout {
        destination = stdout
        format = "foo"
}

